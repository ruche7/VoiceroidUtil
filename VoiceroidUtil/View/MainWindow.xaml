<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:l="http://schemas.livet-mvvm.net/2011/wpf"
    xmlns:local="clr-namespace:VoiceroidUtil"
    xmlns:v="clr-namespace:VoiceroidUtil.View"
    xmlns:vm="clr-namespace:VoiceroidUtil.ViewModel"
    xmlns:msg="clr-namespace:VoiceroidUtil.Messaging"
    x:Class="VoiceroidUtil.View.MainWindow"
    mc:Ignorable="d"
    Title="{Binding Title}"
    Icon="/VoiceroidUtil;component/resources/icon/main.ico"
    ResizeMode="CanResizeWithGrip"
    Topmost="{Binding AppConfig.Value.IsTopmost, Mode=OneWay}"
    UseLayoutRounding="True"
    Width="400"
    Height="420"
    MinWidth="320"
    MinHeight="240"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextRenderingMode="ClearType">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="/VoiceroidUtil;component/resources/CommonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding
            Gesture="Ctrl+E"
            Command="{Binding AppConfig.OpenSaveDirectoryCommand}" />
    </Window.InputBindings>

    <i:Interaction.Behaviors>
        <v:MainWindowConfigBehavior />
    </i:Interaction.Behaviors>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closed">
            <l:DataContextDisposeAction />
        </i:EventTrigger>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding UIConfig.LoadCommand}" />
            <i:InvokeCommandAction Command="{Binding TalkTextReplaceConfig.LoadCommand}" />
            <i:InvokeCommandAction Command="{Binding AppConfig.LoadCommand}" />
        </i:EventTrigger>
        <i:EventTrigger
            SourceObject="{Binding AppConfig.IsLoaded}"
            EventName="PropertyChanged">
            <i:InvokeCommandAction Command="{Binding AppConfig.UpdateCheckCommand}" />
        </i:EventTrigger>
        <i:EventTrigger SourceObject="{Binding UIConfig.Value}" EventName="PropertyChanged">
            <i:InvokeCommandAction Command="{Binding UIConfig.SaveCommand}" />
        </i:EventTrigger>
        <i:EventTrigger
            SourceObject="{Binding TalkTextReplaceConfig.Value}"
            EventName="PropertyChanged">
            <i:InvokeCommandAction Command="{Binding TalkTextReplaceConfig.SaveCommand}" />
        </i:EventTrigger>
        <i:EventTrigger SourceObject="{Binding AppConfig.Value}" EventName="PropertyChanged">
            <i:InvokeCommandAction Command="{Binding AppConfig.SaveCommand}" />
        </i:EventTrigger> 
        <l:InteractionMessageTrigger
            Messenger="{Binding Messenger}"
            MessageKey="{x:Static msg:MessageKeys.OpenFileDialogMessageKey}">
            <msg:OpenFileDialogMessageAction />
        </l:InteractionMessageTrigger>
        <l:InteractionMessageTrigger
            Messenger="{Binding Messenger}"
            MessageKey="{x:Static msg:MessageKeys.DirectoryOpenMessageKey}">
            <msg:DirectoryOpenMessageAction />
        </l:InteractionMessageTrigger>
        <l:InteractionMessageTrigger
            Messenger="{Binding Messenger}"
            MessageKey="{x:Static msg:MessageKeys.VoiceroidActionMessageKey}">
            <msg:VoiceroidActionMessageAction InvokeActionOnlyWhenWindowIsActive="False" />
        </l:InteractionMessageTrigger>
        <l:InteractionMessageTrigger
            Messenger="{Binding Messenger}"
            MessageKey="{x:Static msg:MessageKeys.WindowActionMessageKey}">
            <l:WindowInteractionMessageAction InvokeActionOnlyWhenWindowIsActive="False" />
        </l:InteractionMessageTrigger>
    </i:Interaction.Triggers>
    
    <DockPanel>
        <v:AppStatusBar
            DataContext="{Binding LastStatus}"
            MinHeight="42"
            DockPanel.Dock="Bottom" />
        <TabControl Margin="2">
            <TabItem>
                <TabItem.InputBindings>
                    <KeyBinding
                        Gesture="Ctrl+Q"
                        Command="{Binding Voiceroid.PlayStopCommand}" />
                    <KeyBinding
                        Gesture="Ctrl+S"
                        Command="{Binding Voiceroid.SaveCommand}" />
                </TabItem.InputBindings>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/VoiceroidUtil;component/resources/icon/main16.png" />
                        <AccessText Text="操作(_1)" Margin="2,0,0,0" />
                    </StackPanel>
                </TabItem.Header>
                <v:VoiceroidView DataContext="{Binding Voiceroid}" Margin="2" />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/VoiceroidUtil;component/resources/icon/text_replace.png" />
                        <AccessText Text="置換(_2)" Margin="2,0,0,0" />
                    </StackPanel>
                </TabItem.Header>
                <v:TalkTextReplaceConfigView
                    DataContext="{Binding TalkTextReplaceConfig}"
                    Margin="2" />
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/VoiceroidUtil;component/resources/icon/config.png" />
                        <AccessText Text="設定(_3)" Margin="2,0,0,0" />
                    </StackPanel>
                </TabItem.Header>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <v:AppConfigView DataContext="{Binding AppConfig}" Margin="2" />
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
