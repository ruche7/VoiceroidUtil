        </Style.Triggers>
    </Style>

    <Style x:Key="VoiceroidStatusIcon" x:Shared="False" TargetType="Image">
        <Setter Property="Stretch" Value="None" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter
            Property="Source"
            Value="/VoiceroidUtil;component/resources/icon/status_ng.png" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                <Setter
                    Property="Source"
                    Value="/VoiceroidUtil;component/resources/icon/status_ok.png" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="VoiceroidStatusText" x:Shared="False" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Text" Value="起動していません" />
        <Setter Property="Foreground" Value="Red" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                <Setter Property="Text" Value="起動しています" />
                <Setter Property="Foreground" Value="Green" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- VoiceroidViewModel -->

    <Style x:Key="VoiceroidRunExitIcon" x:Shared="False" TargetType="Image">
        <Setter Property="Stretch" Value="None" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter
            Property="Source"
            Value="/VoiceroidUtil;component/resources/icon/exited_notfound.png" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsProcessRunning.Value}" Value="True">
                <Setter
                    Property="Source"
                    Value="/VoiceroidUtil;component/resources/icon/running.png" />
            </DataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding IsProcessRunning.Value}" Value="False" />
                    <Condition Binding="{Binding IsProcessExecutable.Value}" Value="True" />
                </MultiDataTrigger.Conditions>
                <Setter
                    Property="Source"
                    Value="/VoiceroidUtil;component/resources/icon/exited_executable.png" />
            </MultiDataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="VoiceroidPlayStopIcon" x:Shared="False" TargetType="Image">
        <Setter Property="Stretch" Value="None" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Source" Value="/VoiceroidUtil;component/resources/icon/play.png" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsProcessPlaying.Value}" Value="True">
                <Setter
                    Property="Source"
                    Value="/VoiceroidUtil;component/resources/icon/stop.png" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="VoiceroidPlayStopText" x:Shared="False" TargetType="AccessText">
        <Setter Property="Text" Value="再生(_Q)" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsProcessPlaying.Value}" Value="True">
                <Setter Property="Text" Value="停止(_Q)" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
