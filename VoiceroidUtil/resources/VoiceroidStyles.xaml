                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Id}" Value="YukariEx" />
                    <Condition Binding="{Binding IsRunning}" Value="False" />
                </MultiDataTrigger.Conditions>
                <Setter
                    Property="Source"
                    Value="/VoiceroidUtil;component/resources/voiceroid/yukari_ng.png" />
            </MultiDataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Id}" Value="YukariEx" />
                    <Condition Binding="{Binding IsRunning}" Value="True" />
                </MultiDataTrigger.Conditions>
                <Setter
                    Property="Source"
                    Value="/VoiceroidUtil;component/resources/voiceroid/yukari_ok.png" />
            </MultiDataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Id}" Value="MakiEx" />
